<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="32dp">

    <ImageView
        android:id="@+id/iconLock"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@android:drawable/ic_lock_idle_lock"
        app:tint="#43A047"
        android:background="@drawable/circle_white_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recuperar Acceso"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/iconLock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresa el correo asociado a tu cuenta y te enviaremos un enlace para restablecer tu contraseÃ±a."
        android:gravity="center"
        android:textColor="#757575"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

    <EditText
        android:id="@+id/etEmailReset"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bg_input_modern"
        android:hint="tucorreo@ejemplo.com"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"/>

    <Button
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="ENVIAR CORREO"
        android:textStyle="bold"
        android:backgroundTint="#43A047"
        app:cornerRadius="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/etEmailReset"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar y Volver"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:textColor="#757575"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btnReset"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>